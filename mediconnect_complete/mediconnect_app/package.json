{
  "name": "mediconnect-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:patient\" \"npm run dev:portals\"",
    "dev:backend": "cd packages/backend && npm run dev",
    "dev:patient": "cd packages/patient-app && npm run start",
    "dev:portals": "cd packages/web-portals && npm run dev",
    "build": "npm run build:backend && npm run build:portals",
    "build:backend": "cd packages/backend && npm run build",
    "build:portals": "cd packages/web-portals && npm run build",
    "test": "npm run test:backend",
    "test:backend": "cd packages/backend && npm test",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "db:migrate": "cd packages/backend && npm run db:migrate",
    "db:seed": "cd packages/backend && npm run db:seed"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "prettier": "^2.8.4",
    "eslint": "^8.35.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}